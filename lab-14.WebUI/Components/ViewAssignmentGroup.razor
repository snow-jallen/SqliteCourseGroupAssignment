<div class="border ms-2 mt-1 mb-2 p-2">
    <h4>@AssignmentGroup.Name (@AssignmentGroup.Weight %)</h4>
    @foreach (var assignment in AssignmentGroup.Assignments)
    {
        <ViewAssignment Assignment="assignment" />
    }

    @if (newButtonVisible)
    {
        <NewAssignment AssignmentGroupId="AssignmentGroup.Id" Added="added" />
    }
    else
    {
        <button @onclick="() => newButtonVisible = !newButtonVisible">Add Assignment</button>
    }
</div>

@code {
    bool newButtonVisible = false;
    void added()
    {
        newButtonVisible = false;
    }
    [Parameter]
    public AssignmentGroup AssignmentGroup { get; set; }
}
